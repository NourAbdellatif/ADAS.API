@model ADAS.Application.Models.Emails.ForgotPasswordViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Forgot Password</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h2 {
            color: #333;
        }
        .reset-link {
            margin-bottom: 15px;
        }
        .password-section {
            background-color: #f5f5f5;
            padding: 15px;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h2>Forgot Password</h2>
    <p>A new password has been autogenerated for your account. Please use the following information to log in:</p>
    <div class="password-section">
        <h3>New Password:</h3>
        <p><strong>@Model.Password</strong></p>
        <p>Please remember to change your password after logging in.</p>
    </div>
    <p>If you did not request a password reset, please ignore this email.</p>
    <p>Thank you,</p>
    <p>ADAS</p>
</body>
</html>
