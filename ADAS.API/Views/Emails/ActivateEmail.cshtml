@model ADAS.Application.Models.Emails.ActivateEmailViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Activate Your Email</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h2 {
            color: #333;
        }
        .activation-link {
            margin-bottom: 15px;
        }
        .password-section {
            background-color: #f5f5f5;
            padding: 15px;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h2>Activate Your Email</h2>
    <p>To reactivate your email, please click the following link:</p>
    <p class="activation-link"><a href="@Model.Link">Activate Now</a></p>
    <p>If you did not request this activation, please ignore this email.</p>
    <div class="password-section">
        <h3>New Password:</h3>
        <p>A new password has been generated for your account:</p>
        <p><strong>@Model.Password</strong></p>
        <p>Please remember to change your password after logging in.</p>
    </div>
    <p>Thank you,</p>
    <p>Your Company Name</p>
</body>
</html>
